<h1>Questions</h1>
<div class="row mb-2">
  <% @posts.each do |post| %>
    <div class="col-md-6">
      <div class="card flex-md-row mb-4 box-shadow h-md-250">
        <div class="card-body d-flex flex-column align-items-start">
          <strong class="d-inline-block mb-2 text-primary"><%= post.user.name %></strong>
          <h3 class="mb-0">
            <%= link_to post, class: 'text-dark' do %>
              <%= post.ime %>
            <% end %>
          </h3>
          <div class="mb-1 text-muted"><%= post.created_at.strftime('%d. %m. %Y')%></div>
          <p class="card-text mb-auto"><%= truncate(post.opis, length: 100) %></p>
          <a href="#"><%= link_to 'Read more', post %></a>
        </div>
      </div>
    </div>
  <% end %>
</div>
